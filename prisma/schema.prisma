generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("PRISMA_DATABASE_URL") // uses connection pooling
  directUrl = env("DATABASE_URL") // uses a direct connection
}

model Campaigns {
  id            Int           @id @default(autoincrement())
  name          String
  desc          String
  zip           String
  zsize         Int?
  creatives     Creatives[]   // One campaign can have many creatives
}

model Creatives {
  id              Int           @id @default(autoincrement())
  name            String
  width           Int
  height          Int
  preview         String?
  file            String
  fsize           Int?
  backup          String
  bsize           Int?
  campaignId      Int
  campaign        Campaigns    @relation(fields: [campaignId], references: [id])
}
